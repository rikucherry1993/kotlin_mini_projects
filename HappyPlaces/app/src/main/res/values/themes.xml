<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HappyPlaces" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#96ceb4</item>
        <item name="colorPrimaryVariant">#ffcc5c</item>
        <item name="colorOnPrimary">#ffeead</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#88d8b0</item>
        <item name="colorSecondaryVariant">#ffcc5c</item>
        <item name="colorOnSecondary">#ffcc5c</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomNoActionBarTheme" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">#96ceb4</item>
    </style>

    <style name="CustomToolBarStyle">
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:colorControlNormal">#FFFFFF</item>
    </style>

    <style name="CustomButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">#88d8b0</item>
    </style>

    <style name="CustomEdittextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">#ffcc5c</item>
        <item name="hintTextColor">#88d8b0</item>
    </style>
</resources>